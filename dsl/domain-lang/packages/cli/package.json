{
    "name": "@domainlang/cli",
    "displayName": "DomainLang CLI",
    "description": "Command-line interface for DomainLang - validate, analyze, and manage Domain-Driven Design models",
    "version": "0.8.0",
    "type": "module",
    "author": "larsbaunwall",
    "license": "Apache-2.0",
    "keywords": [
        "ddd",
        "domain-driven design",
        "domainlang",
        "dlang",
        "bounded-context",
        "context-map",
        "cli",
        "langium",
        "dsl",
        "modeling",
        "architecture"
    ],
    "homepage": "https://domainlang.net",
    "repository": {
        "type": "git",
        "url": "https://github.com/DomainLang/DomainLang",
        "directory": "dsl/domain-lang/packages/cli"
    },
    "bugs": {
        "url": "https://github.com/DomainLang/DomainLang/issues"
    },
    "engines": {
        "node": ">=20.10.0",
        "npm": ">=10.2.3"
    },
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "dlang": "./bin/cli.js",
        "domain-lang-cli": "./bin/cli.js"
    },
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out",
        "build": "tsc -b tsconfig.json && shx cp -r src/templates out/templates",
        "build:clean": "npm run clean && npm run build",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@domainlang/language": "0.1.0",
        "ink": "^5.2.1",
        "ink-gradient": "^3.0.0",
        "ink-spinner": "~5.0.0",
        "react": "^18.3.1",
        "string-width": "^8.1.1",
        "tar": "^7.0.0",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/node": "~20.19.33",
        "@types/react": "^18.3.28",
        "@types/tar": "^6.0.0",
        "@types/yargs": "^17.0.35",
        "@vitest/coverage-v8": "^4.0.18",
        "ink-testing-library": "^4.0.0",
        "shx": "~0.4.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "volta": {
        "node": "20.19.2",
        "npm": "10.8.2"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
