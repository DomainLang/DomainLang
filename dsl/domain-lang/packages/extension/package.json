{
    "name": "vscode-domainlang",
    "version": "0.11.0",
    "displayName": "DomainLang",
    "description": "A DSL for Domain-Driven Design",
    "publisher": "DomainLang",
    "author": "larsbaunwall",
    "homepage": "https://domainlang.net",
    "license": "Apache License 2.0",
    "icon": "images/icon.png",
    "keywords": [
        "ddd",
        "domain-driven design",
        "langium",
        "dlang",
        "domainlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DomainLang/DomainLang"
    },
    "bugs": {
        "url": "https://github.com/DomainLang/DomainLang/issues"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:domain-lang"
    ],
    "contributes": {
        "commands": [
            {
                "command": "domainlang.diagram.open",
                "title": "DomainLang: Open diagram",
                "category": "DomainLang"
            }
        ],
        "languages": [
            {
                "id": "domain-lang",
                "aliases": [
                    "DomainLang",
                    "domain-lang"
                ],
                "extensions": [
                    ".dlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "domain-lang",
                "scopeName": "source.domain-lang",
                "path": "syntaxes/domain-lang.tmLanguage.json"
            },
            {
                "scopeName": "markdown.domain-lang.codeblock",
                "path": "syntaxes/domain-lang-markdown-inject.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.domain-lang": "domain-lang"
                }
            }
        ],
        "languageModelTools": [
            {
                "name": "domainlang_validate",
                "displayName": "DomainLang: Validate Model",
                "toolReferenceName": "domainlang_validate",
                "modelDescription": "Validates the DomainLang model in the current workspace and returns all diagnostics (errors, warnings, info). Use this to check for errors and warnings in the model.",
                "userDescription": "Check your DomainLang model for errors and warnings",
                "canBeReferencedInPrompt": true,
                "icon": "$(check)",
                "tags": [
                    "domainlang",
                    "validation",
                    "diagnostics"
                ],
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "file": {
                            "type": "string",
                            "description": "Optional: URI of a specific file to validate. If omitted, validates the entire workspace."
                        }
                    }
                }
            },
            {
                "name": "domainlang_list",
                "displayName": "DomainLang: List Entities",
                "toolReferenceName": "domainlang_list",
                "modelDescription": "Lists DomainLang entities with optional filters. Supports domains, bounded contexts (bcs), teams, classifications, relationships (rels), context maps (cmaps), and domain maps (dmaps). Can filter by name, domain, team, classification, or metadata.",
                "userDescription": "Query and filter domains, bounded contexts, teams, and other model entities",
                "canBeReferencedInPrompt": true,
                "icon": "$(list-tree)",
                "tags": [
                    "domainlang",
                    "query",
                    "search"
                ],
                "inputSchema": {
                    "type": "object",
                    "required": [
                        "type"
                    ],
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "domains",
                                "bcs",
                                "bounded-contexts",
                                "contexts",
                                "teams",
                                "classifications",
                                "relationships",
                                "rels",
                                "context-maps",
                                "cmaps",
                                "domain-maps",
                                "dmaps"
                            ],
                            "description": "Entity type to list"
                        },
                        "filters": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "Filter by name (string or regex)"
                                },
                                "fqn": {
                                    "type": "string",
                                    "description": "Filter by fully qualified name"
                                },
                                "domain": {
                                    "type": "string",
                                    "description": "Filter BCs by domain"
                                },
                                "team": {
                                    "type": "string",
                                    "description": "Filter BCs by team"
                                },
                                "classification": {
                                    "type": "string",
                                    "description": "Filter BCs by classification"
                                },
                                "metadata": {
                                    "type": "string",
                                    "description": "Filter BCs by metadata key=value"
                                }
                            }
                        }
                    }
                }
            },
            {
                "name": "domainlang_get",
                "displayName": "DomainLang: Get Element",
                "toolReferenceName": "domainlang_get",
                "modelDescription": "Retrieves detailed information about a specific DomainLang element by its fully qualified name (FQN), or returns a high-level model summary with entity counts. Use summary=true to get an overview of the entire model.",
                "userDescription": "Get details about a specific element or view a model summary",
                "canBeReferencedInPrompt": true,
                "icon": "$(file)",
                "tags": [
                    "domainlang",
                    "detail",
                    "summary"
                ],
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "fqn": {
                            "type": "string",
                            "description": "Fully qualified name of the element to retrieve"
                        },
                        "summary": {
                            "type": "boolean",
                            "description": "If true, returns model summary instead of a single element"
                        }
                    }
                }
            },
            {
                "name": "domainlang_explain",
                "displayName": "DomainLang: Explain Element",
                "toolReferenceName": "domainlang_explain",
                "modelDescription": "Provides a rich markdown explanation of a DomainLang element by its fully qualified name (FQN). Returns detailed documentation including signature, description, properties, relationships, terminology, and decisions - the same content shown in hover tooltips.",
                "userDescription": "Get a detailed explanation of any model element with full documentation",
                "canBeReferencedInPrompt": true,
                "icon": "$(info)",
                "tags": [
                    "domainlang",
                    "documentation",
                    "explain"
                ],
                "inputSchema": {
                    "type": "object",
                    "required": [
                        "fqn"
                    ],
                    "properties": {
                        "fqn": {
                            "type": "string",
                            "description": "Fully qualified name of the element to explain"
                        }
                    }
                }
            }
        ],
        "configuration": {
            "title": "DomainLang",
            "properties": {
                "domainlang.lsp.traceImports": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable detailed import resolution trace logs in the DomainLang language server output."
                },
                "domainlang.lsp.infoLogs": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable info and timing logs in the DomainLang language server output."
                }
            }
        }
    },
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out pack syntaxes/domain-lang.tmLanguage.json",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/domain-lang.tmLanguage.json ./syntaxes/domain-lang.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "@domainlang/language": "0.1.0",
        "sprotty": "~1.4.0",
        "sprotty-vscode": "~1.1.0",
        "sprotty-vscode-webview": "~1.1.0",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "~20.19.33",
        "@types/vscode": "^1.109.0",
        "@vscode/vsce": "^3.7.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.27.3",
        "shx": "~0.4.0",
        "typescript": "^5.9.3"
    },
    "vsce": {
        "dependencies": false
    }
}
