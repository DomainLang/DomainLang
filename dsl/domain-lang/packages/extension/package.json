{
    "name": "vscode-domainlang",
    "version": "0.9.0",
    "displayName": "DomainLang",
    "description": "A DSL for Domain-Driven Design",
    "publisher": "DomainLang",
    "author": "larsbaunwall",
    "homepage": "https://domainlang.net",
    "license": "Apache License 2.0",
    "icon": "images/icon.png",
    "keywords": [
        "ddd",
        "domain-driven design",
        "langium",
        "dlang",
        "domainlang"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DomainLang/DomainLang"
    },
    "bugs": {
        "url": "https://github.com/DomainLang/DomainLang/issues"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "domain-lang",
                "aliases": [
                    "DomainLang",
                    "domain-lang"
                ],
                "extensions": [
                    ".dlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "domain-lang",
                "scopeName": "source.domain-lang",
                "path": "syntaxes/domain-lang.tmLanguage.json"
            }
        ],
        "languageModelTools": [
            {
                "name": "domainlang_validate",
                "displayName": "DomainLang: Validate Model",
                "description": "Validates the DomainLang model in the current workspace"
            },
            {
                "name": "domainlang_list",
                "displayName": "DomainLang: List Entities",
                "description": "Lists DomainLang entities with optional filters"
            },
            {
                "name": "domainlang_get",
                "displayName": "DomainLang: Get Element",
                "description": "Retrieves a specific element by FQN or model summary"
            },
            {
                "name": "domainlang_explain",
                "displayName": "DomainLang: Explain Element",
                "description": "Provides rich markdown explanation of an element"
            }
        ]
    },
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "npm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/domain-lang.tmLanguage.json ./syntaxes/domain-lang.tmLanguage.json",
        "build": "npm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "npm run clean && npm run build",
        "watch": "npm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\""
    },
    "dependencies": {
        "@domainlang/language": "0.1.0",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@types/node": "~20.19.33",
        "@types/vscode": "^1.109.0",
        "@vscode/vsce": "^3.7.1",
        "concurrently": "^9.2.1",
        "esbuild": "^0.27.3",
        "shx": "~0.4.0",
        "typescript": "^5.9.3"
    },
    "vsce": {
        "dependencies": false
    }
}
