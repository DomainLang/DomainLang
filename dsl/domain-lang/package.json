{
  "private": true,
  "type": "module",
  "name": "domainlang",
  "version": "0.13.0",
  "displayName": "DomainLang",
  "description": "A DSL for Domain-Driven Design",
  "publisher": "DomainLang",
  "author": "larsbaunwall",
  "license": "Apache License 2.0",
  "icon": "images/icon.png",
  "keywords": [
    "ddd",
    "domain-driven design",
    "langium",
    "dlang"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DomainLang/DomainLang"
  },
  "bugs": {
    "url": "https://github.com/DomainLang/DomainLang/issues"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "scripts": {
    "clean": "npm run clean --workspaces",
    "watch": "tsc -b tsconfig.build.json --watch",
    "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
    "build:clean": "npm run clean && npm run build",
    "bundle": "npm run build --workspace packages/demo",
    "vscode:prepublish": "npm run --workspace packages/extension vscode:prepublish",
    "langium:generate": "npm run --workspace packages/language langium:generate",
    "langium:watch": "npm run --workspace packages/language langium:watch",
    "test": "npm run --workspace packages/language test",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "~20.19.33",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "shx": "~0.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.18"
  },
  "volta": {
    "node": "20.19.2",
    "npm": "10.8.2"
  },
  "workspaces": [
    "packages/language",
    "packages/cli",
    "packages/extension",
    "packages/demo"
  ]
}
